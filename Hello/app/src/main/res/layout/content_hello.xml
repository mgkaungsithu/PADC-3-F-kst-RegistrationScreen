<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.padcmyanmar.hello.HelloActivity"
    tools:showIn="@layout/activity_hello">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Android!my name is Kaung Sithu"
        android:textSize="22sp"
        android:textColor="#ff0000"
        android:layout_marginTop="240dp"
                />

    <Button
        android:id="@+id/btn_click_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/lbl_click_me"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_user_click_timedtamp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="280dp"
        android:text="You clicked at{Timestamp}."
        android:textColor="#000000"
        android:textSize="16sp"
        />

</FrameLayout>
